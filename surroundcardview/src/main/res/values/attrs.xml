<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="SurroundCardView" tools:ignore="ResourceName">
        <attr name="scv_duration" format="integer|reference" />
        <attr name="scv_width" format="dimension|reference" />
        <attr name="scv_color" format="color|reference" />
        <attr name="scv_surrounded" format="boolean" />

        <attr name="scv_startPoint" format="enum">
            <enum name="top_start" value="0" />
            <enum name="top_end" value="1" />
            <enum name="bottom_start" value="2" />
            <enum name="bottom_end" value="3" />
        </attr>

        <attr name="scv_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="horizontal_middle" value="1" />
            <enum name="vertical" value="2" />
            <enum name="vertical_middle" value="3" />
        </attr>
    </declare-styleable>
</resources>
